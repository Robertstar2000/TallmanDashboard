{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Use Next.js build process
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed from 'bundler'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "app/api/connection-settings/[type]",
    "app/api/connection-settings/_[type]",
    "scripts/Untitled-1.ts" // Exclude this problematic file
  ]
}
